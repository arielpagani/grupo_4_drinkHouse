<!DOCTYPE html>
<html lang="en">
<!-- head -->
<%- include("./partials/head") %>
<body>
    <!-- header -->
    <%- include("./partials/header") %>
    <main>
        <h2>Catálogo de Productos</h2>
        <section class="contenedor-articulos">
            <% for ( let i = 0; i < arreglo.length; i++ ) { %>
            <div>
                <a href="/views/productDetail">
                <article>
                    <img src="<%= arreglo[i].img %>" alt="imagen de articulo">
                    <div class="caja-articulo">
                        <p> <%= arreglo[i].categoria %></p>
                        <h2> <%= arreglo[i].marca %> </h2>
                        <!-- <p>Código: <%= arreglo[i].codigo %></p> -->
                        <p> <%= arreglo[i].precio %> </p>
                        <p> <%= arreglo[i].descuento %> off</p>
                        <p> <%= arreglo[i].descripcion %> </p>
                        <p> Stock <%= arreglo[i].stock %> </p>
                    </div>
                </article>
                </a>
            </div>
            <% } %>
        </section>
    </main>
<!-- footer -->
<%- include("./partials/footer") %>
</body>
</html>