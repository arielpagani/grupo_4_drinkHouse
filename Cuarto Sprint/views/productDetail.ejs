<!DOCTYPE html>
<html lang="es">
<!-- head -->
<%- include("./partials/head") %>
<body>
    <!-- header -->
    <%- include("./partials/header") %>
    <div class="product-container">
        <div class="ruta">
            <h4><a href="/">DrinkHouse</a> > <a href="/views/product/<%=arreglo.categoria%>"><%=arreglo.categoria%></a></h4>
        </div>
        <div class="product-middle-container">
            <div class="product-imagenes">
                <img src="<%=arreglo.img%>" alt="imagen-producto">
            </div>
            <div class="product-description">
                <h4>Descripcion</h4>
                <%=arreglo.descripcion%>
            </div>
            <div class="product-details">
                <div class="product-details-top">
                    <h2><%=arreglo.marca%></h2>
                    <h3>$<%=arreglo.precio%></h3>
                    <h3><%=arreglo.descuento%>% OFF</h3>
                </div>
                <div class="product-details-bottom">
                    <button>Comprar ahora</button>
                    <button>Agregar al carrito</button>
                </div>
            </div>
        </div>
    </div>   
    <!-- footer -->
    <%- include("./partials/footer") %>
</body>
</html>