<!DOCTYPE html>
<html lang="es">
<!-- head -->
<head>       
    <script src="/slider.js"></script>
    <%- include("./partials/head") %>
</head>
<body>
    <!-- header -->
    <%- include("./partials/header") %>
<main>
    <section>
        <%- include("./slider") %>
    </section>
    <h2>Nuestras categorias</h2>
    <div class="home-catalogo">
        <a class="card" href="/views/product/3">
            <img class="imagen" src="/images/cerveza.jpg" alt="imagen de articulo">
            <p class="text"> Cerveza </p>
        </a>
        <a class="card" href="/views/product/4">
            <img class="imagen" src="/images/whisky.jpeg" alt="imagen de articulo">
            <p class="text"> Whisky </p>
        </a>
        <a class="card" href="/views/product/2">
            <img class="imagen" src="/images/licor.jpg" alt="imagen de articulo">
            <p class="text"> Licor </p>
        </a>
        <a class="card" href="/views/product/1">
            <img class="imagen" src="/images/vino.jpeg" alt="imagen de articulo">
            <p class="text"> Vino </p>
        </a>
    </div>
    <h2>Mas populares</h2>
    <div class="home-productos-populares-container">
        <% for ( let i = 0; i < productos.length; i++ ) { %>
            <div class="home-productos-populares">
                <div class="image-product-container">
                    <a href="/views/productDetail/<%= productos[i].id_producto %>"><img class="imagen-producto" src="<%= productos[i].imagen_producto %>" alt="imagen de articulo"></a>
                </div>
                <div class="product-description">
                    <h3><%= productos[i].marca %></h3>
                    <p>$<%= productos[i].precio %></p>
                    <p><a href="/" id="carrito"><i class="fas fa-shopping-basket"></i>Agregar al carrito</a></p>
                </div>
            </div>
        <% } %>
    </div>
    <section class="marcas">
        <div class="contenedor-marcas">
            <img class="img-marcas" src="/images/marcas/branca.png" alt="logo branca">
        </div>
        <div class="contenedor-marcas">
            <img class="img-marcas"  src="/images/marcas/buchanans.png" alt="logo buchanans">    
        </div>
        <div class="contenedor-marcas">
            <img class="img-marcas"  src="/images/marcas/budweiser.png" alt="logo budweiser">    
        </div>
        <div class="contenedor-marcas">
            <img class="img-marcas"  src="/images/marcas/concha.png" alt="logo concha y toro">    
        </div>
        <div class="contenedor-marcas">
            <img class="img-marcas" src="/images/marcas/jager.png" alt="logo jagermaister">    
        </div>
    </section>
<!-- logo whatsapp -->
    <a class="fab fa-whatsapp" href="https://wa.me/34555005500/?text=tu%20texto%20personalizado" target="_blank"></a>
</main>
<!-- footer -->
<%- include("./partials/footer") %>
</body>
</html>