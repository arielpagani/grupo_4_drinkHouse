<!DOCTYPE html>
<html lang="es">
<!-- head -->
<%- include("./partials/head") %>
<body>
    
    <!-- header -->
    <%- include("./partials/header") %>

<main>
    <section class="contenedor-articulos">
        <% for ( let i = 0; i < productos.length; i++ ) { %>
            <a class="card" href="/views/productDetail/<%= productos[i].id_producto %>">
                <img class="imagen" src="<%= productos[i].imagen_producto %>" alt="imagen de articulo">
                <p class="text"> $<%= productos[i].precio %> </p>
            </a>
        <% } %>
    </section>
</main>

<!-- footer -->
<%- include("./partials/footer") %>
</body>
</html>

